# ============================================
# RAILWAY BACKEND - Variables de Entorno
# ============================================

# Base de Datos (Railway auto-conecta con PostgreSQL)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# JWT Secrets (CAMBIAR EN PRODUCCIÓN)
JWT_SECRET=genera-un-secret-super-seguro-aqui-min-32-caracteres
JWT_REFRESH_SECRET=genera-otro-secret-diferente-aqui-min-32-caracteres

# URLs
FRONTEND_URL=https://tu-proyecto.vercel.app
NODE_ENV=production
PORT=3001

# Cloudinary (tus credenciales reales)
CLOUDINARY_CLOUD_NAME=tu-cloud-name-aqui
CLOUDINARY_API_KEY=tu-api-key-aqui
CLOUDINARY_API_SECRET=tu-api-secret-aqui

# Stripe (usar claves de PRODUCCIÓN)
STRIPE_SECRET_KEY=sk_live_tu-clave-secreta-de-produccion
STRIPE_WEBHOOK_SECRET=whsec_tu-webhook-secret-de-produccion

# Google Gemini AI
GEMINI_API_KEY=tu-api-key-de-gemini

# Redis (opcional)
REDIS_URL=${{Redis.REDIS_URL}}

# ============================================
# VERCEL FRONTEND - Variables de Entorno
# ============================================

# API URL (tu URL de Railway)
NUXT_PUBLIC_API_URL=https://tu-backend.up.railway.app/api

# Stripe Public Key (clave pública de producción)
NUXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_live_tu-clave-publica-de-produccion

